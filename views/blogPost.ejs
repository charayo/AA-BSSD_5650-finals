<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
    <!-- load bootstrap css -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<!-- load fontawesome -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		body { padding-top:80px; }
	</style>
</head>
<body>
<main class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-pencil-square"></span> Make a Post</h1>
	<div class="form-group">
		<label>Content</label>
		<select  class="form-control" id="select">
			<option value="without-image">Without Image</option>
			<option value="with-image">With Image</option>
		</select>
	</div>


	<!-- Post FORM -->
	<form  action="/blogpost" method="post" id="image_no">
		<div class="form-group">
			<label>Title</label>
			<input type="text" class="form-control" name="title">
		</div>
		<div class="form-group">
			<label>Content</label>
            <textarea class="form-control" name="content" id="" cols="30" rows="10"></textarea>
		</div>

		<button type="submit" class="btn btn-warning btn-lg">Post</button>
	</form>

		<!-- Image Post Form -->
	<form  action="/blogpost" method="post" id="image_yes" class="d-none" >
		<div class="form-group">
			<label>Title</label>
			<input type="text" class="form-control" name="title">
		</div>
		<div class="form-group">
			<label>Content</label>
            <textarea class="form-control" name="content" id="" cols="30" rows="10"></textarea>
		</div>
		<div class="form-group">
			<label>Image</label>
			<!-- <input type="file" class="form-control-file" name="image"> -->
			<input type="text" class="form-control" name="image">
		</div>

		<button type="submit" class="btn btn-warning btn-lg">Post</button>
	</form>

</div>

</main>
<script>
	document.getElementById("select").addEventListener("change", (e)=>{
		var choice = e.target.value
		if(choice == "with-image"){
			document.getElementById("image_yes").className = "d-block";
			document.getElementById("image_no").className = "d-none"
		}else{
			document.getElementById("image_yes").className = "d-none";
			document.getElementById("image_no").className = "d-block"
		}
	})
</script>
</body>
</html>
